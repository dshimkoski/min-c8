{
    "compilerOptions": {
      "target": "esnext", 
      "module": "esnext", 
      "moduleResolution": "node", 
      "strict": true, 
      "jsx": "react-jsx", 
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true, 
      "isolatedModules": true,
      "types": ["vitest/globals"] 
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "vite.config.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }
  